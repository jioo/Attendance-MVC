@model AttendanceGpi.Core.Schedule

@{
    ViewBag.Title = "Create";
}

<div class="container ">
    <h2 class="sub-title">Create Schedule</h2>
    <div class="div-adjust div-sched col-xs-12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-sm-6 col-sm-push-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.SchedName, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.SchedName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SchedName, "", new { @class = "text-danger" })
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.SchedStart, htmlAttributes: new { @class = "control-label" })
                        <div class="input-group clockpicker">
                            @Html.EditorFor(model => model.SchedStart, new { htmlAttributes = new { @class = "form-control" } })
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-time" id="btn-timein"></span>
                            </span>
                        </div>
                        @Html.ValidationMessageFor(model => model.SchedStart, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.SchedEnd, htmlAttributes: new { @class = "control-label" })
                        <div class="input-group clockpicker">
                            @Html.EditorFor(model => model.SchedEnd, new { htmlAttributes = new { @class = "form-control" } })
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-time" id="btn-timeout"></span>
                            </span>
                        </div>
                        @Html.ValidationMessageFor(model => model.SchedEnd, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group text-center sched-buttons">
                    <button type="submit" name="button" class="btn btn-default btn-close">Submit</button>
                    <a href="/Schedule" class="btn btn-danger btn-close">Cancel</a>
                    
                </div>
            </div>
        }

    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/custom-clock.js")
}
